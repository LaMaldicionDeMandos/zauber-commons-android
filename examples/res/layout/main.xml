<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:paginator="http://schemas.android.com/apk/res/com.zauberlabs.android.examples"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <com.zauberlabs.android.image_paginator.ImagePaginator
            android:id="@+id/paginator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            paginator:placeholder="@drawable/icon"
            paginator:bullet_margin="5dp"
            paginator:bullet_size="10dp"
            paginator:bullet_color_on="#ff0000"
            paginator:bullet_color_off="#00ffff"
            />

</LinearLayout>
